<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="TABLE_01" author="pcalouch">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="smigicdb" tableName="cool_table"/>
            </not>
        </preConditions>
        <sqlFile path="${basedir}/sql/table/cool_table.sql"/>
        <comment>
            Creates the cool table.
        </comment>
    </changeSet>

    <changeSet id="TABLE_02" author="smigic">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="smigicdb" tableName="person_table"/>
            </not>
        </preConditions>
        <sqlFile path="${basedir}/sql/table/person_table.sql"/>
        <comment>
            Creates the person table.
        </comment>
    </changeSet>

    <changeSet id="TABLE_03" author="smigic">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="public" tableName="person"/>
            </not>
        </preConditions>
        <sqlFile path="${basedir}/sql/table/person.sql"/>
        <comment>
            Creates the person.
        </comment>
    </changeSet>
</databaseChangeLog>